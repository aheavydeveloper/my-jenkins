pipeline {
    agent any
    tools {
        maven 'myMaven' // Replace with the name you specified in the Global Tool Configuration
    }
 
    stages {
        stage('Build') {
            steps {
                echo 'Building the application...'
                echo 'BUILDID - $BUILD_ID'
                echo "PATH - $env.PATH"
                sh 'mvn -v'
            }
        }

        stage('Test') {
            steps {
                echo 'Testing the application...'
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deploying the application...'
            }
        }
    }
}
