pipeline {
    agent any
    tools {
        maven 'myMaven' // Replace with the name you specified in the Global Tool Configuration
    }

    stages {
        stage('Build') {
            steps {
                echo 'Building the application...'
                sh 'mvn -v'
            }
        }

        stage('Test') {
            steps {
                echo 'Testing the application...'
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deploying the application...'
            }
        }
    }
}
